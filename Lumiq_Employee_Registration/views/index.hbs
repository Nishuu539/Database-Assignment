<body>
    <div class="container">
        <h2>
            <center>Employee Registration Form</center>
        </h2>
        <div class="form">
            <form action="/register" method="post">
                <div><label for="naame">First Name:</label>
                    <input type="text" id="naame" placeholder="Enter Your Fname" name="firstName" required><br>
                </div>
                <div><label for="lnaame">Last Name:</label>
                    <input type="text" id="naame" placeholder="Enter Your Lname" name="lastName" required><br>
                </div>
                <div>
                    <label for="email"> Email:</label>
                    <input type="email" id="email" placeholder="Enter Your Email Id" name="email" required><br>
                </div>
                <div>
                    <label for="role"> Gender:</label>
                    <input type="text" id="role" placeholder="Job/Title" name="gender" required><br>
                </div>
                <div>
                    <label for="mobile"> Contact No:</label>
                    <input type="number" id="number" placeholder="Enter your Contact No." name="mobile" required><br>
                </div>
                <div>
                    <label for="city"> Age:</label>
                    <input type="text" id="city" placeholder="Where do you live?" name="age" required><br>
                </div>
                
                
                <div class="button"><button id="submitBtn">Submit</button></div>

            </form>
        </div>
    </div>
